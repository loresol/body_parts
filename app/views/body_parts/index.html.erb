<h1>Listing ideas</h1>

<% @body_parts.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |body_part| %>
      <div class="col-md-4">
        <%= image_tag body_part.picture_url, height: 200 if body_part.picture.present?%>
        <h4 class="letra-azul"><%= link_to body_part.name, body_part %></h4>
        <%= body_part.description %>
      </div>
    <% end %>
  </div>
<% end %>
